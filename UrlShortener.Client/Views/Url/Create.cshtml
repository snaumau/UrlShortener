@model UrlDto

@{
    ViewBag.Title = "Create link";
}

<h2>Create link</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" role="form">
            <div class="form-group">
                <label asp-for="UrlLong"></label>
                <div>
                    <span asp-validation-for="UrlLong" class="text-danger" />
                </div>
                <input required="required" type="url" class="form-control scan" asp-for="UrlLong" class="form-control" />
            </div>
            <input type="hidden" asp-for="UrlShort" />
            <br />
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Save</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
