@model UrlDto

@{
    string hostUri = "https://localhost:7284";
}

<tbody>
    <tr>
        <th scope="row">@Model.UrlLong</th>
        <td>
            <a asp-controller="Home" asp-action="Index" asp-route-urlId="@Model.UrlShort" target="_blank">@hostUri/@Model.UrlShort</a>
        </td>
        <td>@Model.CreatedAt</td>
        <td>@Model.Counter</td>
        <td>
            <form asp-controller="Url" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </td>
    </tr>
</tbody>
