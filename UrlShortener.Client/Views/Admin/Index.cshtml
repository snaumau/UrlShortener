@model IQueryable<Url>

@{
    ViewBag.Title = "All urls";
}

<div class="row">
    <div class="text-center">
        <h2>List of shortener links</h2>
    </div>
    <div class="text-center">
        <a asp-action="Create" class="btn btn-primary">Add Url</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Long url</th>
                <th scope="col">Short url</th>
                <th scope="col">Created</th>
                <th scope="col">Number of clicks</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        @foreach (var url in Model.ToList())
        {
            <tbody>
                <tr>
                    <th scope="row">@url.UrlLong</th>
                    <td>
                        <a href="@url.UrlLong" target="_blank">@url.UrlShort</a>
                    </td>
                    <td>@url.CreatedAt</td>
                    <td>@url.Counter</td>
                    <td>
                        <form asp-controller="Admin" asp-action="Update" method="post">
                            <input type="hidden" asp-for="@url.Id">
                            <input type="submit" value="Update" class="btn btn-primary">
                        </form>
                    </td>
                    <td>
                        <form asp-controller="Admin" asp-action="Delete" method="post">
                            <input type="hidden" asp-for="@url.Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            </tbody>
        }
    </table>

</div>